{
  "name": "BitNote",
  "version": "1.0.0",
  "description": "BitNote - AI Note Taking App",
  "author": {
    "name": "Siddhartha Adatrao",
    "email": "siddadatrao@gmail.com"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean-artifacts": "rm -rf dist/mac-arm64 && rm -rf dist/*.dmg && xattr -cr . && find . -name '.DS_Store' -type f -delete",
    "build-mac-electron": "dotenv -e .env -- npm run clean-artifacts && dotenv -e .env -- electron-builder --mac"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "dotenv-cli": "^7.4.4",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-clipboard-extended": "^1.1.1"
  },
  "build": {
    "appId": "com.bitnote.app",
    "productName": "BitNote",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "static/**/*",
      "assets/**/*",
      "!**/node_modules/*",
      "!**/.git/*"
    ],
    "mac": {
      "icon": "assets/bitnote.icns",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "signIgnore": "node_modules/*",
      "darkModeSupport": true
    },
    "dmg": {
      "sign": true
    },
    "afterSign": "./scripts/notarize.js",
    "publish": {
      "provider": "github",
      "private": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/siddadatrao/bitnote.git"
  }
}
